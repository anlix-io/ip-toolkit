{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "newLine": "LF",
    "module": "umd",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2016",
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom", "esnext"],
    "declarationDir": "dist/types",
  },
  "include": [
    "src",
    "types",
    ".eslintrc.js",
    "jest.config.js",
  ],
  "exclude": [
    "dist",
    "src/tests",
    "node_modules"
  ]
}