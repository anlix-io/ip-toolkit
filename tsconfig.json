{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "newLine": "LF",
    "module": "umd",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2016",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "declarationDir": "dist/types",
  },
  "include": [
    "types",
    "src/**/*.ts",
    ".eslintrc.js",
    "jest.config.js",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts",
  ],
  "plugins": [
    {
      "transform": "ts-import-plugin",
      "imports": [
        {
          "libraryName": "ipv4",
          "libraryDirectory": "./src/ipv4",
          "style": "glob" 
        }
      ]
    }
  ]
}